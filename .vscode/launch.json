{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://acme.nl",
            "skipFiles": [
                "${workspaceFolder}/public/js/all.js"
            ],
            "pathMappings": [
                {
                    "url": "http://acme.nl/js/",
                    "path": "${workspaceFolder}\\public\\js/"
                },
                {
                    "url": "http://acme.nl",
                    "path": "${workspaceFolder}/public"
                }
            ]
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}